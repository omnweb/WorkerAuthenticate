{
  "config":["./src/config/config.ts"],
  "include": ["./src/"], 
  "exclude": ["../wwwroot/app", "node_modules/*"],
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "compileOnSave": false
}
